#!/usr/bin/env python
"""Vyro

Usage:
  vyro [-v] provision [<package>]...
  vyro [-v] available
  vyro [-v] enabled
  vyro [-v] enable [<package>]...
  vyro [-v] disable [<package>]...
  vyro [-v] configure (<package>) [<key>] [<value>]
  vyro [-v] readme (<package>)
  vyro [-v] fetch (<vendor>)
  vyro (-h | --help)
  vyro (-v | --verbose)
  vyro --version

Options:
  -h --help         Show this screen.
  -v --verbose      Show verbose output.
  --version         Show version.

"""

import os
import sys

if os.path.exists(os.path.dirname(__file__) + '/../lib'):
    sys.path.append(os.path.dirname(__file__) + '/../lib')

from docopt import docopt
import vyro

if __name__ == '__main__':
    opts = docopt(__doc__, version='Vyro 0.0.0')

    if os.path.isfile(os.getcwd() + '/Vagrantfile'):
        router = vyro.Router(opts)
        router.handle()

    else:
        print "No Vagrantfile found"
